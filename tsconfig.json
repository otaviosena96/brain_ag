{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                       
    "rootDir": "./src",
    "experimentalDecorators": true,  // Adicione isto
    "emitDecoratorMetadata": true   // Adicione isto
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
